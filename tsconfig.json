{
    "compilerOptions": {
        "lib": ["es2023"],
        "target": "es2022",
        "module": "node16",
        "moduleResolution": "node16",
        "skipLibCheck": true,

        "strict": true,
        "exactOptionalPropertyTypes": true,

        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,

        "noEmitOnError": true,
        "outDir": "dist",
    },
    "include": ["src/**/*"]
}
